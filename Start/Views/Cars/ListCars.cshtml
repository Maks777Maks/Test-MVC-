@*@using Start.Data.Models
@model IEnumerable<Car>*@

@*@using Start.ViewModels
@model CarsListViewModel*@

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListCars</title>
</head>
<body>
    <h1>@ViewBag.Title</h1>
    <div class="row mt-5 mb-2">
        @{
            foreach (var item in Model.GetCars)
            {
                <div class="col-lg-4">
                    <img class="thumbnail" src="@item.Image" />
                    <p>Model: @item.Name</p>
                    <p>Price:  @item.Price.ToString("C")</p>
                    <p><a class="btn btn-warning" href="#">Info</a></p>
                </div>
            }
        }
    </div>
</body>
</html>
